
# Force npm usage and disable other package managers
engine-strict=true
use-npm=true
legacy-peer-deps=true

# Explicitly disable pnpm
use-pnpm=false
npm-only=true
pnpm-disable=true
pnpm=false

# Ensure lockfile is created/updated
package-lock=true
package-lock-only=false

# Force CI to use npm
npm-force-resolutions=true
save-exact=true

# Disable yarn and pnpm
disable-pnpm=true
disable-yarn=true

# Completely ignore pnpm-lock.yaml
ignore-pnpm-lock=true
